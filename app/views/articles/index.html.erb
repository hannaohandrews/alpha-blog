<h1>Articles Listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title </th>
      <th>Description </th>
       <th>Actions </th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
      <tr>
   
      <td><%=article.title%></th>
      <td><%=article.description%></th>
      <div>
      by <%= article.user.username if article.user%>
      </div>
      <td><%= link_to 'Show', article_path(article) %></th>
      <td><%= link_to 'Edit', article_path(article) %></th>
      <td><%= link_to 'Delete', article_path(article), method: :delete %></th>
      </tr>
    <% end%>
  </tbody>
</table>

<p>
<%= link_to 'Create new article', new_article_path%>
</p>

